{{#partial "content"}}
    <div class="container">
        <div class="row">
            <div class="col s6">
                <h5 class="text-center">Add Animal</h5>
                <form action="/animal"  method="POST">

                    <div class="input-field ">
                        <input  id="name" name="name" type="text" class="validate">
                        <label for="name">Animal Name</label>
                    </div>
                    {{#if ranger}}
                    <div class="form-group">

                        <label for="rangerId">Ranger</label>

                            <select class="form-control form-control-sm" id="rangerId" name="rangerId">

                                {{#each ranger}}
                                    <option value="{{id}}">{{name}}</option>
                                {{/each}}



                            </select>


                    </div>
                    {{/if}}
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit

                    </button>
                </form>
            </div>
            <div class="col s6">
                <div class="ranger-records">
                    <h2 class="text-center">Animals</h2>


                        <table>
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>

                            </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>{{animals.id}}</td>
                                    <td>{{animals.name}}</td>


                                </tr>


                            </tbody>
                        </table>
                </div>
                </div>
        </div>

    </div>
{{/partial}}
{{> layout.hbs}}