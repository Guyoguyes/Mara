{{#partial "content"}}
    <div class="rangers-page">
        <div class="container">
            <div class="row">
                <div class="col s6">
                    <div class="ranger-form-header">
                        <h5>Record Ranger</h5>
                    </div>
                    <form action="/rangers" method="POST">

                            <div class="input-field ">
                                <input placeholder="Placeholder" id="name" name="name" type="text" class="validate">
                                <label for="name">Ranger Name</label>
                            </div>
                            <div class="input-field ">
                                <input id="budgeno" name="budgeno" type="text" class="validate">
                                <label for="budgeno">Budge No.</label>
                            </div>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">group_add</i>
                        </button>
                    </form>
                    <a href="/animalType" class="waves-effect waves-light btn-large" style="margin-top: 50px">Add Animal</a>
                </div>
                <div class="col s6">
                    <div class="ranger-records">
                        <h2>Rangers</h2>
                        {{#if rangers}}

                            <table>
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Budge Number</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each rangers}}
                                    <tr>
                                        <td>{{id}}</td>
                                        <td>{{name}}</td>
                                        <td>{{budgeno}}</td>

                                    </tr>
                                {{/each}}

                                </tbody>
                            </table>


                        {{else}}
                            <p>No Ranger Recorded</p>
                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}